<div class="contact-div">
  <form action="">
    <label for="email">
      <input
        type="email"
        name="number"
        id="number"
        placeholder="Enter your email"
      />
    </label>

    <label for="number">
      <input
        type="text"
        name="number"
        id="number"
        placeholder="Enter your mobile number (optional)"
      />
    </label>

    <label for="message">
      <textarea
        name="message"
        id="message"
        rows="10"
        placeholder="Enter your message"></textarea>
    </label>

    <button>Send message</button>
  </form>
</div>

<style>
  .contact-div form {
    display: flex;
    flex-flow: column wrap;
    gap: 2rem;
    align-items: center;
  }

  input,
  label,
  textarea {
    font-size: 1.3rem;
    background-color: #27272a;
    border-radius: 5px;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    color: white;
    padding: 1rem;
    border: none;
    width: 90%;
  }

  input,
  textarea {
    width: 90%;
  }

  button {
    font-size: 1.3rem;
    background-color: #27272a;
    padding: 1.3rem;
    border: none;
    border-radius: 5px;
    color: white;
    width: 90%;
    max-width: 500px;
    opacity: 0.8;
  }

  button:hover {
    opacity: 1;
  }

  @media (max-width: 700px) {
    input, label, textarea {
        padding: 0.6rem;
    }

  }
</style>
