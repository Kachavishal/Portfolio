<div class="contact-div">
  <form action="">
    <label for="email">Email:
      <input type="email" name="number" id="number" placeholder="Enter your email"/>
    </label>

    <label for="number">Mobile no.
      <input type="text" name="number" id="number" placeholder="Enter your mobile number (optional)"/>
    </label>

    <label for="message">Message:
      <textarea name="message" id="message" cols="30" rows="10" placeholder="Enter your message"></textarea>
    </label>

    <button>Send mail</button>
  </form>
</div>

<style>
  .contact-div form {
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    gap: 2rem;
  }

  .contact-div {
    padding-top: 4rem;
  }
</style>
