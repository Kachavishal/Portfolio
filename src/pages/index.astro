---
import Home from "../components/Home.astro";
import Layout from "../layouts/Layout.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Vishal kacha | Portfolio">
  <div class="home" id="home">
    <Home />
  </div>

  <div class="project" id="project">
    <h1>Projects</h1>
    <Projects />
  </div>
</Layout>

<style>
  .home,
  .project {
    height: 100vh;
  }

  .project h1 {
    text-align: center;
    margin: 0;
    padding: 0;
    font-size: 3rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 2rem;
  }
</style>
