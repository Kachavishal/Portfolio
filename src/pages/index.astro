---
import Home from "../components/Home.astro";
import Layout from "../layouts/Layout.astro";
import Projects from "../components/Projects.astro";
import Contact from "../components/Contact.astro";
---

<Layout title="Vishal kacha | Portfolio">
  <div class="home" id="home">
    <Home />
  </div>

  <div class="project" id="project">
    <h1>Projects</h1>
    <Projects />
  </div>

  <div class="contact" id="contact">
    <h1>Contact</h1>
    <Contact />
  </div>
</Layout>

<style>
  .home,
  .contact {
    height: 100vh;
  }

  .project h1,
  .contact h1 {
    text-align: center;
    margin: 0;
    padding: 0;
    font-size: 3rem;
    font-weight: 700;
    color: #fff;
    padding-top: 4rem;
  }

  .project h1 {
    margin-bottom: 2rem;
  }

  .contact h1 {
    margin-bottom: 4rem;
  }

  .contact {
    display: flex;
    flex-flow: column;
    width: 100%;
    justify-content: center;
  }
</style>
