---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Projects">
  <h1>Hello from projects</h1>
  <svg
    width="100%"
    height="100%"
    viewBox="0 0 1000 1000"
    xmlns="http://www.w3.org/2000/svg"
  >
    <line x1="0" y1="100" x2="0" y2="10" stroke="white" stroke-width="1px"
    ></line>

    <line x1="90" y1="90" x2="800" y2="80" stroke="white" stroke-width="1px"
    ></line>
  </svg>
</Layout>

<style>
  svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  line {
    stroke-dasharray: 100;
    animation: dash 5s linear infinite;
  }

    @keyframes dash {
        to {
        stroke-dashoffset: -1000;
        }
    }


</style>
